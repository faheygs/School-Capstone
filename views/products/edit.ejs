<% include ../partials/header %>

    <form action="/products/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="m-auto w-50">
        <h1 class="display-4 pt-5 pb-3 text-center">Edit <%= product.name %></h1>
        <div class="form-group">
            <label for="name">Name of Product</label>
            <input type="text" class="form-control" name="name" id="name" value="<%= product.name %>">
        </div>
        <div class="form-group">
            <label for="image">Image to Upload</label>
            <input type="file" name="image" id="image" class="form-control" accept="image/*">
        </div>
        <div class="form-group">
            <label for="price">Price of Product</label>
            <input type="number" name="price" id="price" class="form-control" min="0" step="0.01" value="<%= product.price %>">
        </div>
        <div class="form-group">
            <label for="category">Select Category of Product</label>
            <select name="category" id="category" class="form-control">
                <option></option>
                <option value="font" <%= product.category === 'font' ? 'selected' : '' %>>Font</option>
                <option value="print" <%= product.category === 'print' ? 'selected' : '' %>>Print</option>
            </select>
        </div>
        <div class="form-group">
            <label for="description">Description of Product</label>
            <textarea name="description" id="description" class="form-control"><%= product.description %></textarea>
        </div>
        <button type="submit" class="btn btn-dark w-100 mb-2">Update Product</button>
        <a href="/products/view">Go Back</a>
    </form>

<% include ../partials/footer %>