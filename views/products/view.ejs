<% include ../partials/header %>

    <div class="row pt-4"></div>
    
    <h1 class="display-4">Edit/Delete Products</h1>
    
    <div class="row text-center">
        <% product.forEach(function(product) { %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="img-thumbnail">
                    <figure class="figure">
                        <img class="figure-img img-fluid rounded" src="<%= product.image %>">
                        <figcaption  class="figure-caption">
                            <h3 class="pt-1" style="text-transform: capitalize;"><%= product.name %></h3>
                            <p>
                                <h5><%= product.category.charAt(0).toUpperCase() + product.category.slice(1); %></h5>
                                <h5>$<%= product.price.toFixed(2) %></h5>
                            </p>
                        </figcaption >
                        <a href="/products/<%= product._id %>/edit" class="btn btn-warning">Edit</a>
                        <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </figure>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>